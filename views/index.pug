extends layout

block content  
  h1 #{Title}
  br
  div  
    .container
    .row
      .col-xs-8.col-xs-offset-2
        .input-group
          .input-group-btn.search-panel
            
            
            button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
              span#search_hashtag Search Hashtag
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='#graph') Graph
              li
                a(href='#stream') Stream
          input#search_param(type='hidden', name='search_param', value='all')
          input.form-control(type='text', name='x', placeholder='Search term eg. DonaldTrump')
          span.input-group-btn
            button.btn.btn-default(type='button')
              span.glyphicon.glyphicon-search
