extends layout

block content  
  h1 #{title}
    br
    div  
      .container  
      .row
      form(method="GET", action="/Graph", id="FormSearch")  
        .col-xs-8.col-xs-offset-2
          .input-group
            .input-group-btn.search-panel
            input#search_param(type='hidden', value='Search Hashtag')
            input.form-control(type='text', id='search', name='q', placeholder='Search term eg. DonaldTrump', required)
            span.input-group-btn
              input.btn.btn-default(type='submit', value='Search')
              span.glyphicon.glyphicon-search
